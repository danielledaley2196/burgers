<h1>Burger List</h1>

<h2>Burger Menu</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{burgers.burger-block eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>
    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Eat Me!
    </div>
    <button id="add-" type="submit">Add Burger</button>
</form>